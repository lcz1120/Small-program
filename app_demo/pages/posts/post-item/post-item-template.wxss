.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px
}
.post-author-date {
   margin: 10rpx 0 20rpx 0rpx 
}
.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle; 
  margin-left: 10rpx;
}
.post-date {
   margin-left: 20rpx; 
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx
}
.post-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
   margin-left: 10px; 
}
.post-image {
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
}
.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px; 
  vertical-align: middle;
  margin-left: 10px;
}
.post-like-font {
  vertical-align: middle;
   margin-right: 20rpx; 
}