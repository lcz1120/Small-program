page {
  background: #b3d4db;
  width: 100%;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "微软雅黑";
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 150rpx 0 150rpx 0;
}
.user-name {
  font-size: 32rpx;
  font-weight: bold;
}
.moto-container {
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  margin-top: 200rpx;
  border-radius: 5px;
  text-align: center;
}
.moto-text {
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
}